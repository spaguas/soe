      <script>
        var map = L.map('map').setView([-22.524, -46.524], 7);
        let bounds = L.latLngBounds([]);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        L.control.scale().addTo(map);

        let rst = '<%= outorgas %>';

        var markers = L.markerClusterGroup();

        
        if(rst != ""){
          let outorgas = JSON.parse(rst.replaceAll("&#34;","\""));

          //console.log(outorgas);

          outorgas.forEach(element => {
            let source = element._source;
            
            let discharges = [];
            //Calculate discharge 12 months
            for(let i = 1; i <= 12; i++){
              let x = (""+i).padStart(2,'0');
              let days  = source["dm_"+x];
              let hours = source["hd_"+x];
              let mins  = source["minh_"+x];
              let vaz   = source["vz_"+x];
              let dis   = days * (hours + (mins/60)) * vaz;

              discharges.push({
                dias: days,
                horas: hours,
                minutos: mins,
                vazao: vaz,
                volume: dis
              });

              //console.log("Discharge: ", dis," - [days: ",days,", hours: ",hours,", minutes: ",mins,"]");
            }

            element._source["vazoes"] = discharges;
            element._source["volume_anual"] = _.sumBy(discharges, 'volume');

            let marker = L.marker([element._source.latitude, element._source.longitude],{
              title: element._id,
              data: element
            }).on('click', function(e){
              console.log("Clicou no marker: ", e);

              let opts = e.sourceTarget.options.data;

              const md = new bootstrap.Modal('#infoOutorga', {
                keyboard: false
              });

              md.show();
              
              $("#infoOutorga").find(".modal-title").html(element._id);
              $("#infoOutorga").find(".modal-body").find(".table-vazoes").empty();

              $(".info-municipio").html(opts._source.municipio);
              $(".info-diretoria").html(opts._source.diretoria_req);
              $(".info-ugrhi").html(opts._source.ugrhi);
              $(".info-coordenadas").html(truncateString(""+opts._source.latitude, 6)+","+truncateString(""+opts._source.longitude,6));

              $(".info-tipo").html(opts._source.tipo_de_req_simplificado);
              $(".info-sub-tipo").html(opts._source.tp_uso_subtipo1);
              $(".info-finalidade").html(opts._source.finalidade_1630);
              $(".info-decisao").html(opts._source.decisao_pto);
              $(".info-processo").html(opts._source.processo);
              $(".info-portaria").html(opts._source.portaria);
              $(".info-data-publicacao").html(opts._source.data_publicacao.substring(0,10));
              $(".info-sazonalidade").html(opts._source.sazonalidade);

              $.each(element._source.vazoes, function(k,v){
                console.log(k," => ",v);
                let line = ""
                line += "<tr>";
                  line += "<td class='scope'>"+(k+1)+"</td>";
                  line += "<td class='scope'>"+getMonthName(k+1)+"</td>";
                  line += "<td class='scope'>"+v.dias+"</td>";
                  line += "<td class='scope'>"+(v.horas + (v.minutos/60)).toLocaleString()+"</td>";
                  line += "<td class='scope'>"+v.vazao.toLocaleString()+"</td>";
                  line += "<td class='scope'>"+v.volume.toLocaleString()+"</td>";
                line += "</tr>";

                $("#infoOutorga").find(".modal-body").find(".table-vazoes").append(line);
              })
            });

            console.log(marker);
            markers.addLayer(marker);
            bounds.extend([element._source.latitude, element._source.longitude]);
          });

          map.addLayer(markers);
          if(bounds.isValid()){
            map.fitBounds(bounds);
          }
        }

        $("#btn_filter").on('click', function(e){
          console.log("Filter Button Clicked...");
          $("#form_search").submit();
        });

        function truncateString(str, num) {
          if (str.length > num) {
            return str.slice(0, num) + "...";
          } else {
            return str;
          }
        }

        function getMonthName(month){
          let ret = "";

          if(month == 1){ret = "Janeiro";}
          else if(month == 2){ret = "Fevereiro";}
          else if(month == 3){ret = "Março";}
          else if(month == 4){ret = "Abril";}
          else if(month == 5){ret = "Maio";}
          else if(month == 6){ret = "Junho";}
          else if(month == 7){ret = "Julho"}
          else if(month == 8){ret = "Agosto"}
          else if(month == 9){ret = "Setembro";}
          else if(month == 10){ret = "Outubro";}
          else if(month == 11){ret = "Novembro";}
          else if(month == 12){ret = "Dezembro";}
          else{
            ret = "Desconhecido";
          }
          return ret;
        }

        function calculate_discharge_per_month(minutes,hours,days,discharge){
          return (((minutes/60)+hours)*days)*discharge;
        }

      </script>
